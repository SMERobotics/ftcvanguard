{
    "$schema": "https://www.schemastore.org/tsconfig",

    "compilerOptions": {
        "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator", "DOM", "DOM.Iterable"],
        "module": "es2022",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },

    "include": ["static/**/*.ts"]
}
